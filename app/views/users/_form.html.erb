<%= form_for @user, class: "form-inline" do |f| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
      <% if @user.new_record? %>
        <div class="form-group">
          <%= f.label "Username (login)" %><br/>
          <%= f.text_field :login, size: 40, autofocus: true %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label "E-mail" %><br/>
        <%= f.text_field :email, size: 40 %>
      </div>
      <div class="form-group">
        <%= f.label "Password" %><br/>
        <%= f.password_field :password, size: 40 %>
      </div>
      <div class="form-group">
        <%= f.label "Confirm password" %><br/>
        <%= f.password_field :password_confirmation, size: 40 %>
      </div>
      <h4>Optional</h4>
      <div class="form-group">
        <%= f.label :name %><br/>
        <%= f.text_field :name, size: 40 %>
      </div>
      <div class="form-group">
        <%= f.label "Bio" %><br/>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </div>
    <p>
      <% if @user.new_record? %>
        <%= f.submit 'Create Account', class: "btn btn-success" %>
        <%= link_to 'Cancel', root_path, class: "btn btn-danger" %>
      <% else %>
        <%= f.submit 'Save Changes', class: "btn btn-primary" %>
        <%= link_to 'Cancel', @user, class: "btn btn-danger" %>
      <% end %>
    </p>
  </fieldset>
<% end %>