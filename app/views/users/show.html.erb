<div class="row">
  <div class="col-md-12">   
    <h1><%= name_and_or_login_for(@user) %></h1>
    <h4><%= mail_to @user.email %></h4>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h5>About Me</h5>
    <p><%= @user.description %></p>
    <% if current_user? @user %>
      <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>