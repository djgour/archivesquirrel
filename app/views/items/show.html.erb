<h2><%= "#{@item.level.titleize}: #{@item.name}" %></h2>

<h3>Description</h3>
<p><%= @item.description %></p>
<p>Added by <%= formatted_user_profile_link(@item.user) %>.</p>
<% if @project.project_member?(current_user) %>
  <%= link_to 'Edit', edit_project_item_path(@item.project, @item) %>
<% end %>
<% if @item.deletable_by? (current_user) %>
  <%= link_to 'Delete', project_item_path(@project, @item), 
                        method: :delete,
                        data: { confirm: "Are you sure?" }%>
<% end %>

