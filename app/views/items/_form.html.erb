<%= form_for([@project, @item]) do |f| %>
  <%= render 'shared/errors', object: @item %>
  <fieldset>
    <ol>
      <li>
        <%= f.label "Name/Title" %><br/>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li>
        <%= f.label "Description" %><br/>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </li>
      <li>
        <%= f.label "Level" %><br/>
        <%= f.text_field :level, size: 40, value: "Item" %>
      </li>
    </ol>
    <%= hidden_field_tag :project, @project.id %>
    <% if @parent %>
      <%= hidden_field_tag :parent, @parent.id %>
    <% else %>
      <%= hidden_field_tag :top_level, "default" %>
    <% end %>
    <p>
      <% if @item.new_record? && @parent %>
        <%= f.submit "Add Item" %>
      <% elsif @item.new_record? %>
        <%= f.submit "Create Item" %>
      <% else %>
        <%= f.submit 'Save Changes' %> | <%= link_to 'Cancel', @project %>
      <% end %>
    </p>
  </fieldset>

<% end %>