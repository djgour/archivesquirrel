<%= form_for @project, class: "form-inline" do |f| %>
  <%= render 'shared/errors', object: @project %>
  <fieldset>
      <% if @project.new_record? %>
        <div class="form-group">
          <%= f.label "Project Name" %><br/>
          <%= f.text_field :name, size: 40, autofocus: true %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label "Description" %><br/>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </div>
    <p>
      This is where the "Invite participants" section will go.
    </p>
    <p>
      <% if @project.new_record? %>
        <%= f.submit "Create Project", class: "btn btn-success" %>
        <%= link_to 'Cancel', root_path, class: "btn btn-danger" %>
      <% else %>
        <%= f.submit 'Save Changes', class: "btn btn-primary" %>
        <%= link_to 'Cancel', @project, class: "btn btn-danger" %>
      <% end %>
    </p>
  </fieldset>
<% end %>